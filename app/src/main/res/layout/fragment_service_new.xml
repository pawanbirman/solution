<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".ServiceNewFragment">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <GridLayout
           android:columnCount="2"
           android:rowCount="3"
           android:alignmentMode="alignMargins"
           android:columnOrderPreserved="false"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp">
               
               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   
                   <ImageView
                       android:id="@+id/service_quickly_loan"
                       android:src="@drawable/ic_loan"
                       android:layout_width="80dp"
                       android:layout_height="80dp" />

                   <TextView
                       android:id="@+id/service_quickly_loan_txt"
                       android:layout_marginTop="12dp"
                       android:textColor="#BF007A"
                       android:textSize="18sp"
                       android:text="Quickly Loan"
                       android:textAlignment="center"
                       android:layout_width="110dp"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/service_itr"
                       android:src="@drawable/ic_onlineservices"
                       android:layout_width="80dp"
                       android:layout_height="80dp" />

                   <TextView
                       android:id="@+id/service_itr_txt"
                       android:layout_marginTop="12dp"
                       android:textColor="#BF007A"
                       android:textSize="18sp"
                       android:text="ITR Filing"
                       android:textAlignment="center"
                       android:layout_width="110dp"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/service_insurance"
                       android:src="@drawable/ic_insurance"
                       android:layout_width="80dp"
                       android:layout_height="80dp" />

                   <TextView
                       android:id="@+id/service_insurance_txt"
                       android:layout_marginTop="12dp"
                       android:textColor="#BF007A"
                       android:textSize="18sp"
                       android:text="Insurance"
                       android:textAlignment="center"
                       android:layout_width="110dp"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/service_your_dashboard"
                       android:src="@drawable/ic_services_24dp"
                       android:layout_width="80dp"
                       android:layout_height="80dp" />

                   <TextView
                       android:id="@+id/service_your_dashboard_txt"
                       android:layout_marginTop="12dp"
                       android:textColor="#BF007A"
                       android:textSize="18sp"
                       android:textAlignment="center"
                       android:text="Your Dashboard"
                       android:layout_width="110dp"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </android.support.v7.widget.CardView>




       </GridLayout>


    </LinearLayout>



</ScrollView>