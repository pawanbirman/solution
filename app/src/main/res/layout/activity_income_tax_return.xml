<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.IncomeTaxReturnActivity">

    <TextView
        android:id="@+id/welcome_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="19sp"
        android:hint="Please fill the following Application Form"
        android:textColorHint="@color/colorPrimary" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_msg"
        android:layout_alignParentStart="true">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <TableRow>

                <TextView
                    android:id="@+id/textBorrowerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="10dp"
                    android:text="Name:"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <EditText
                    android:id="@+id/etTaxPayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="7dp"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="10dp"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="10dp"
                    android:text="Contact Number:"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/etTaxPayerContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="7dp"
                    android:hint="Contact number"
                    android:inputType="phone"
                    android:padding="10dp"
                    />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/textNewLoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="10dp"
                    android:text="Email Address"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/etTaxPayerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="7dp"
                    android:hint="Email Address"
                    android:padding="10dp"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAN Card Number"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_column="1"/>

                <EditText
                    android:id="@+id/etTaxPayerPanNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="PAN Number"
                    android:padding="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_column="2"
                    android:inputType="textMultiLine"
                    android:gravity="top|left"
                    android:maxLines="5"
                    android:maxLength="50"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textMeetingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AADHAAR Number"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_column="1"/>

                <EditText
                    android:id="@+id/etTaxPayerAadhaarno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="AADHAAR Number"
                    android:padding="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_column="2"
                    android:inputType="textMultiLine"
                    android:gravity="top|left"
                    android:maxLines="5"
                    android:maxLength="50"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    />
            </TableRow>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <Button
                    android:id="@+id/IncomeTaxReturnApplicationSubmit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttons_new"
                    android:padding="17dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:text="Submit"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

        </TableLayout>


    </ScrollView>
</RelativeLayout>